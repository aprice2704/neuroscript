{
  "name": "vscode-neuroscript",
  "displayName": "NeuroScript Language Support",
  "description": "Syntax highlighting and basic language features for NeuroScript",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "neuroscript",
        "aliases": [
          "NeuroScript",
          "neuroscript"
        ],
        "extensions": [
          ".ns.txt",
          ".ns",
          ".neuro"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "neuroscript",
        "scopeName": "source.neuroscript",
        "path": "./syntaxes/neuroscript.tmLanguage.json"
      }
    ]
  }
}
