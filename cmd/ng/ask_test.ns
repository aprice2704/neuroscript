// NeuroScript AI Example

func main() means

  // Set up the AI model configuration as a map.
  // The 'api_key_ref' key should hold the NAME of the environment
  // variable containing the API key.
  set top_tier_config = {\
    "provider": "google",\
    "model": "gemini-2.5-pro",\
    "api_key_ref": "GOOGLE_API_KEY"\
  }

  set fast_config = {\
    "provider": "google",\
    "model": "gemini-2.5-flash",\
    "api_key_ref": "GOOGLE_API_KEY"\
  }

  set creative_config = {\
    "provider": "google",\
    "model": "gemini-1.5-pro",\
    "api_key_ref": "GOOGLE_API_KEY"\
  }

  set codey_config = {\
    "provider": "google",\
    "model": "gemini-2.5-flash",\
    "api_key_ref": "GOOGLE_API_KEY"\
  }


  // Register the models with human-friendly names.
  must tool.agentmodel.Register("heavy_lifter", top_tier_config)
  must tool.agentmodel.Register("quick_chat", fast_config)
  must tool.agentmodel.Register("story_writer", creative_config)
  must tool.agentmodel.Register("code_assistant", codey_config)


  // Ask a question to one of the registered models.
  ask "code_assistant", "please write the sieve of Erasthones in forth" into answer

  emit answer

endfunc